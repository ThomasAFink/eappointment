{% block content %}
"BEGIN:VCALENDAR"
"X-LOTUS-CHARSET:UTF-8"
"VERSION:2.0"
"PRODID:ZMS-Berlin"
"BEGIN:VTIMEZONE"
"TZID:Europe/Berlin"
"X-LIC-LOCATION:Europe/Berlin"
"BEGIN:DAYLIGHT"
"TZOFFSETFROM:+0100"
"TZOFFSETTO:+0200"
"TZNAME:CEST"
"DTSTART:19700329T020000"
"RRULE:FREQ=YEARLY;INTERVAL=1;BYDAY=-1SU;BYMONTH=3"
"END:DAYLIGHT"
"BEGIN:STANDARD"
"TZOFFSETFROM:+0200"
"TZOFFSETTO:+0100"
"TZNAME:CET"
"DTSTART:19701025T030000"
"RRULE:FREQ=YEARLY;INTERVAL=1;BYDAY=-1SU;BYMONTH=10"
"END:STANDARD"
"END:VTIMEZONE"
{# "METHOD:REQUEST" #}
"METHOD:PUBLISH"
"BEGIN:VEVENT"
"UID:fraunhofer_im" . time()
{# "SEQUENCE:0" #}
{# "ORGANIZER:Fraunhofer HHI" #}
"CLASS:PUBLIC"

"DTSTART;TZID=Europe/Berlin: {{ date|date("Ymd") ~ "T" ~ date|date("H:i") }}"
"DTEND;TZID=Europe/Berlin: {{ date|date("Ymd") ~ "T" ~ date|date("H:i") }}"
"DTSTAMP: {{ date|date("Ymd\THis\Z") }}"
"LOCATION: {{ process.scope.name }}"
"SUMMARY: {% trans "Berlin-Termin:" %} {{ process.id }}"
"DESCRIPTION: {{ description }}"

"BEGIN:VALARM"
"ACTION:DISPLAY"
"TRIGGER:-P1D"
"DESCRIPTION:Erinnerung"
"END:VALARM"
"END:VEVENT"
"END:VCALENDAR"
{% endblock %}

