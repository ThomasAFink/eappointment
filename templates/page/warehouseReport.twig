{% extends "layout/main.twig" %}
{% block content %}
<div class="counter-view" data-includeurl="{{ includeUrl() }}">
        <div class="report-index">
            <h1>{% trans %}Report Rohdaten{% endtrans %}</h1>

            {% embed "block/report/board.twig" with {'class': 'report-board', 'download': 'raw'} %}
            {% block board_title %}
                {% trans %}Kategorie{% endtrans %}: {{ categoryName|trans }}
            {% endblock %}
            {% block board_body %}
                <table class="report-board--table report-board--text">
                    <thead>
                        {% for key, entry in report.dictionary|first|keys if key < 4 %}
                            {% if entry == "position" %}
                            <th>#</th>
                            {% else %}
                            <th>{{ entry|capitalize }}</th>
                            {% endif %}
                        {% endfor %}
                    </thead>
                    <tbody>
                        {% for entry in report.dictionary %}
                                <tr>
                                    <td>{{ entry.position + 1 }}</td>
                                    <td>{{ entry.variable }}</td>
                                    <td>{{ entry.type }}</td>
                                    <td>{{ entry.description }}</td>
                                </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <table class="report-board--table report-board--text">
                    <thead>
                        {% for entry in report.dictionary %}
                            <th>{{ entry.variable }}</th>
                        {% endfor %}
                    </thead>
                    <tbody>
                    {% for row in report.data %}
                        <tr>
                            {% for entry in row %}
                            <td>{{ entry }}</td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endblock %}
            {% endembed %}
        </div>
    </div>
{% endblock %}
