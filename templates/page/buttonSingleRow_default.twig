{% extends "layout/main.twig" %}

{% use "block/content/buttons.twig" %}
{% use "block/content/feedback.twig" %}

{% block pageid %}index{% endblock %}
{% block contact %}
    <div class="adressangabe_behoerde">{{ organisation.name }}</div>
    <div class="adressangabe_name"> {{ organisation.departments|first.name }}</div>
{% endblock %}
{% block content %}

	{% if validate %}
	{{ block("feedback_print") }}
	{% endif %}

	<div class="werbeblock_oben">
		{% trans "Anzahl vor Ihnen wartender Kunden" %}:
		<span id="wartende">
		    {% if waitingQueueAmount %} {{ waitingQueueAmount }} {% else %} {% trans "keine" %} {% endif %}
		</span>
		<br>
		<div class="wartezeit">
			<span id="wartezeit">{{ waitingTime }}</span>
		</div>
	</div>

	{{ block("button_singlerow") }}
	</div>
</div>
{% endblock %}


