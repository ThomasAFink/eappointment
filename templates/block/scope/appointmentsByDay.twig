{% embed "block/scaffholding/board.twig" with {'class': 'scope-appointments-by-day'} %}
    {% from 'element/helper/form.twig' import formgroup, formbutton %}
    {% block board_title %} {{title}}{% endblock %}
    {% block board_body %}
        <style>
            .board__body {padding:0px; margin:0px}
            table {width: 100%;}
            table th, table td {display: table-cell; white-space: nowrap; padding: 0px 10px; text-align:left;}
            h1 {margin: 0px;}
            td.wrap {white-space: break-spaces;}
            @media print {
                .navigation-primary, .one-sixths {display:none !important;}
                .grid {display:block !important;}
                .five-sixths {width: 100% !important; margin:0px; padding:0px;}
                #page-wrapper {margin:0px; padding:0px;}
                table {margin:0px; padding:0px;}
                table th, table td { display: table-cell; white-space: nowrap; padding: 0px 10px; text-align:left; vertical-align: top;}
                .board {margin:0px; padding:0px;}
            }
        </style>
        <table>
            <thead>
                <tr>
                    <th>{{ clusterEnabled ? 'KÃ¼rzel' : 'Lfd.Nr.'}}</th>
                    <th>Uhrzeit</th>
                    <th>Nr.</th>
                    <th>Name</th>
                    <th>Absage&shy;code</th>
                    <th>Telefon</th>
                    <th>Email</th>
                    <th>Dienstleistung</th>
                    <th>Anmerkungen</th>
                </tr>
            </thead>
            <tbody>
                {% for item in processList %}
                    <tr>
                        <td>{{ clusterEnabled ? item.scope.shortName : loop.index }}</td>
                        <td>{{ item.queue.arrivalTime|date('H:i') }}</td>
                        <td>{{ item.queue.number }}</td>
                        <td>{{ item.clients.0.familyName }}</td>
                        <td>{{ item.authKey }}</td>
                        <td>{{ item.clients.0.telephone }}</td>
                        <td>{{ item.clients.0.email }}</td>
                        <td class="wrap">{{ item.requests.0.name }}</td>
                        <td>{{ item.amendment }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endblock %}

{% endembed %}
