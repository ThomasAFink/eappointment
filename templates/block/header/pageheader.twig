{% block pageheader %}
    {% from 'element/helper/form.twig' import formgroup, formbutton %}
        <div class="left">
            {% block pageheader_left -%}
            <img alt="Logo" src="data:image/png;base64,"/>
            {%- endblock %}
        </div>
        <div class="middle">
            {% block pageheader_middle -%}
            <div class="header-scope">
        		{% set scopeName = workstation.scope.contact.name %}
        		{% if workstation.scope.contact.name|length > 30 %}
        			{% set scopeName = workstation.scope.contact.name[:30] ~ "..." %}
        		{% endif %}
            	<div class="user-scope" title="{{ workstation.scope.contact.name }}">Standort: <strong>{{ scopeName }}</strong></div>
            </div>
            {%- endblock %}

        </div>
        <div class="right">
            {% block pageheader_right -%}
                <span class="user-name">üë§
                    <strong>{{ workstation.useraccount.id }}</strong>
                </span>&nbsp;&nbsp;&nbsp;&nbsp;
            <a href="{{ urlGet('logout', {'loginName' : workstation.loginName}, {}) }}" title="Abmelden">‚ùé Abmelden</a>
            {%- endblock %}
        </div>

{% endblock %}
