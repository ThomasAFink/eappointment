{% embed "block/scaffholding/board.twig" with {'class': 'loginform loginform-view'} %}
        {% from 'element/helper/form.twig' import formgroup, custombutton, formbutton, inputfield %}

        {% block board_title %}
            {{ title }}
        {% endblock %}


        {% block board_body %}
            <form action="./" method="POST" class="form--base">
                <fieldset>
                    {{ formgroup(
                        {"label": "Nutzername:", "errors": exception.data.id.messages },
                        [{
                            "type":"input",
                            "parameter": {
                                "name": "loginName",
                                "maxlength": "40",
                                "value": loginData.loginName.value,
                                "accesskey": "n",
                            }
                        }]
                    ) }}

                    {{ formgroup(
                        {"label": "Passwort:", "errors": exception.data.password.messages},
                        [{
                            "type":"input",
                            "parameter": {
                                "type": "password",
                                "name": "password",
                                "maxlength": "40",
                                "accesskey": "p",
                            }
                        }]
                    ) }}
                </fieldset>
                {{ inputfield({ "name":"login_form_validate", "type":"hidden", "value":"1" }) }}
                <div class="form-actions">
                    {{ custombutton({ "type":"new", "class": "button button-default","target": urlGet('oidc', {}, {}), "label":"OIDC Login", "title":("Login via OIDC")|trans}) }}
                    {{ formbutton({ "type":"login", "label":"Anmelden", "value": "Anmelden", "accesskey":"a"}) }}
                </div>
            </form>
        {% endblock %}


        {% block board_footer %}
            Wenden Sie sich bei vergessenen Passw√∂rtern bitte an Ihren lokalen Anwendungssystembetreuer.
        {% endblock %}

{% endembed %}
