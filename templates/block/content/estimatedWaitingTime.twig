{% block estimatedWaitingTime %}
{% trans %}Vorraussichtliche Wartezeit{% endtrans %}:

{% if waitingTime and scope.status.queue.ghostWorkstationCount %}
	{% if waitingTime < 120 %}
        {{ waitingTime }} {{ "%s"|format("Minuten")|trans }}
    {% else %}
    	{{ (waitingTime / 60)|round(0, 'floor') }} {{ "%s"|format("Stunden")|trans }}
    {% endif %}
{% else %}
    {{ "%s"|format("unbekannt")|trans }}
{% endif %}
{% endblock %}
