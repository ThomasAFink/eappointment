{% block infoColumn %}
<!--Logo und Text-->
<style>
	.qrCode--Headline {
		text-align: center;
		background: #fff;
		font-family: Arial,sans-serif;
		font-size: 32px;
		font-weight: 700;
		line-height: 45px;
		margin-bottom: 3px;
		margin-top: 42px;
	}
	.qrContainer {
		background: #fff;
	}
</style>
<div align="center">
	{% if showQrCode and webcalldisplay is defined %}
		<div class="qrCode--Headline">{{ ("Mobile Aufrufanzeige")|trans }}</div>
		<div class="qrContainer">
			<canvas id="webcallUrlCode" class="qrCode" width="240" height="240"
				data-text="{{ webcalldisplay|raw }}">
			</canvas>
		</div>
	{% else %}
   		<img src="data:image/{{ calldisplay.image.mime }};base64,{{ calldisplay.image.data }}" width="200" border="0" alt="">
	{% endif %}
	<br><br>
	{% if calldisplay.clusters|length == 1 and calldisplay.clusters|first.callDisplayText %}
	{{ calldisplay.clusters|first.callDisplayText|raw|nl2br }}
	{% elseif calldisplay.scopes|length == 1 and calldisplay.scopes|first.preferences.queue.callDisplayText%}
	{{ calldisplay.scopes|first.preferences.queue.callDisplayText|raw|nl2br }}
	{% endif %}
</div>
{% endblock %}
