{% block clock %}
<div id="Uhr" class="uhr">
    <canvas id="clock" class="CoolClock:themed:120:showSecondHand::{{ calldisplay.serverTime * 1000 }} myClock"></canvas>
    <canvas id="clock_medium" class="CoolClock:themed:160:showSecondHand::{{ calldisplay.serverTime * 1000 }} myClock"></canvas>
    <canvas id="clock_big" class="CoolClock:themed:200:showSecondHand::{{ calldisplay.serverTime * 1000 }} myClock"></canvas>
</div>

<div id="aufrufanzeige_Datum" class="aufrufanzeige_Datum">
    {{ toGermanDateFromTs(calldisplay.serverTime).fulldate }}<br>
</div>
{% endblock %}