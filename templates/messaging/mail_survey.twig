{% block german %}
    Sehr geehrte/r Frau oder Herr {{ client.familyName }},
    <br /><br />
    {{ process.scope.preferences.survey.emailContent|replace({
        '###TOKEN###': random(),
        '###SCOPE###': process.scope.id,
        '###PROVIDER###': process.scope.provider.id,
        '###DATE###': process.appointments|first.date|date('Y-m-d'),
        '###TIME###': process.appointments|first.date|date('H:i:s'),
        '###RESERVETIME###': process.createTimestamp|date('c'),
        '###REQUESTCSV###': process.requests.getCsvForPropertyList(['source', 'id']),
    })|raw }}
