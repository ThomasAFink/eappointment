{% block german %}
    {% if process.status == 'confirmed' %}
    Terminbestaetigung
    {% elseif process.status == 'reminder' %}
    Terminerinnerung
    {% elseif (process.status == 'deleted' or process.status == 'blocked') and not initiator %}
    Terminabsage
    {% elseif (process.status == 'deleted' or process.status == 'blocked') and initiator %}
    Information Terminabsage
    {% elseif process.status == 'updated' and initiator %}
    Information Termin√§nderung
    {% elseif process.status == 'queued' %}
    Wartenummerbestaetigung
    {% elseif process.status == 'pickup' %}
    Ihr Dokument ({{ process.requests|first.name }}) ist fertig und liegt zur Abholung bereit.
    {% elseif process.status == 'finished' and process.clients|first.surveyAccepted %}
    Kundenbefragung des Standorts {{ process.scope.contact.name }}
    {% else %}
    Terminerinnerung
    {% endif %}
{% endblock %}
