<td class="rechterRand wartenummer" data-callTime="{{ queue.callTime }}">
	{% if queue.status == "missed" %}
		<div class="aufrufanzeigenummer missedAppointment">
	{% else %}
		<div class="aufrufanzeigenummer">
	{% endif %}
        {% if queue.withAppointment %}
			<span class="terminkundenanzeige">Terminkunde</span><br>
			{% if queue.number|length == 7 %}
				{% set addClass = " smallerFont7Chars" %}
			{% elseif queue.number|length == 8 %}
				{% set addClass = " smallerFont8Chars" %}
			{% endif %}
			<span class="terminkundennummer{{ addClass }}" data-appointment="{{ queue.number }}">{{ queue.number }}</span>
		{% else %}
		    <span class="wartenummer" data-appointment="{{ queue.number }}">{{ queue.number }}</span>
		{% endif %}
	</div>
</td>
