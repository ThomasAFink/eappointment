{% embed "block/scaffholding/board.twig" with {'class': 'board--spaceless searchresults'} %}
{% from 'element/helper/form.twig' import custombutton, inputfield %}

        {% block board_title %}
            <span tabindex="1" id="search-result-title">{% trans %}Suchergebnisse f√ºr {% endtrans %} "{{ searchUserQuery }}"</span>
        {% endblock %}

        {% block board_body %}
        <script>
            document.getElementById("search-result-title").focus();
        </script>

        <div tabindex="1" class="table-responsive-wrapper">
            <table class="table--base">
                <thead>
                    <tr>
                        <th>Loginname</th>
                        <th>Email-Addresse</th>
                        <th>Letzter Login</th>
                        <th>Aktion</th>
                    </tr>
                </thead>
                <tbody>
                {% for useraccount in userAccountList %}
                    <tr>
                        <td><a href="{{ urlGet('useraccountEdit', {'loginname':useraccount.id}, {}) }}">{{ useraccount.id }}</a></td>
                        <td>{% if useraccount.email %}{{ useraccount.email }}{% endif %}</td>
                        <td>{% if useraccount.lastLogin %}{{ useraccount.lastLogin|date("Y-m-d") }}{% endif %}</td>
                        <td>
                            {{ custombutton({ "type":"edit", "class":"link" ,"target": urlGet('useraccountEdit', {'loginname':useraccount.id}, {}), "label":'<i class="fas fa-user-edit" aria-hidden="true"></i> bearbeiten' }) }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% endblock %}


{% endembed %}
