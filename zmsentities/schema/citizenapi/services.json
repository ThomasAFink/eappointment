{
  "type": "object",
  "description": "Lists all services and includes details, including their IDs, names, and maximum quantities.",
  "properties": {
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[0-9]+$",
            "minLength": 1,
            "maxLength": 50
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200
          },
          "maxQuantity": {
            "type": "number",
            "minimum": 1,
            "maximum": 100
          }
        },
        "required": [
          "id",
          "name",
          "maxQuantity"
        ]
      }
    }
  },
  "status": {
    "type": "number"
  },
  "required": [
    "services"
  ]
}
