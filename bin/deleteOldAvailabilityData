#!/usr/bin/env php
<?php
$dir = realpath(__DIR__);
do {
    $dir = dirname($dir);
    if (file_exists("$dir/autoload.php")) {
        require_once("$dir/autoload.php");
    }
} while ($dir != '/' && !file_exists("$dir/config.php"));
if (file_exists("$dir/bootstrap.php")) {
    require("$dir/bootstrap.php");
} else {
    require("$dir/config.php");
}
$usage = <<<EOS

Usage: {$argv[0]} days [--verbose] [--pending] --commit
        ATTENTION! Delete Availability Data older than 4 weeks. USE WITH CAUTION!
        --commit        no dry run, delete processes
        --verbose       only shows what would be deleted

        !!!!!!!!!!!!!!!!!!!!!!!
        !! DATA LOSS WARNING !!
        !!!!!!!!!!!!!!!!!!!!!!!
EOS;

$verbose = (preg_grep('#^--?v(erbose)?$#', $argv)) ? true : false;
$commit = preg_grep('#^--commit$#', $argv);

if ($commit) {
    $now = new \DateTimeImmutable('now');
    $datetime = $now->modify('- 4 weeks');
    $job = new \BO\Zmsdb\Helper\AvailabilityDeleteByCron($verbose);
    $job->startProcessing($now, $datetime, $commit);
}
if (!$commit) {
    error_log("Use with --commit to delete entries.");
}
