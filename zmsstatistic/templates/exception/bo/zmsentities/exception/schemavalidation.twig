{% extends "layout/main.twig" %}
{% block content %}
    {% embed "block/scaffholding/board.twig" with {'class': 'exception'} %}
    {% from 'element/helper/form.twig' import errormessage %}
        {% block board_title %}Es ist ein Fehler aufgetreten.{% endblock %}
        {% block board_body %}
            <h2>
                {{ title|trans }}
            </h2>
            {% for pointer, item in exception.data %}
                <h3>{{ pointer }}</h3>
                {{ errormessage(item.messages) }}

            {% endfor %}
        {% endblock %}
    {% endembed %}

{% endblock %}
