{
    "type": "object",
    "description": "content of a multipart mail to send as base64 encoding to a client",
    "example": {
        "id": 1234,
        "createIP": "145.15.3.10",
        "createTimestamp": 1447931596000,
        "department": {
            "id": 123,
            "preferences": {
                "notifications": {
                    "enabled": true,
                    "identification": "terminvereinbarung@mitte.berlin.de",
                    "sendConfirmationEnabled": true,
                    "sendReminderEnabled": true
                }
            }
        },
        "multipart": [
            {
                "queueId": "123",
                "mime": "text/html",
                "content": "<h1>Title</h1><p>Message</p>",
                "base64": false
            }
        ],
        "process": {
            "clients": [
                {
                    "familyName": "Max Mustermann",
                    "email": "max@service.berlin.de",
                    "telephone": "030 115"
                }
            ],
            "id": 123456,
            "authKey":"1234",
            "reminderTimestamp": 1447931730000,
            "scope": {
                "id": 123
            },
            "status": "confirmed"
        },
        "subject": "Example Mail",
        "client": [
            {
                "familyName": "Max Mustermann",
                "email": "max@service.berlin.de"
            }
        ]
    },
    "required": [
        "department",
        "multipart",
        "process",
        "subject"
    ],
    "properties": {
        "id": {
            "type": "integer"
        },
        "createIP": {
            "type": "string",
            "description": "IP Address of the creator"
        },
        "createTimestamp": {
            "type": "integer",
            "description": "unix timestamp representing creation of the notification"
        },
        "department": {
            "$ref": "department.json"
        },
        "multipart": {
            "type": "array",
            "description": "message parts to send",
            "items": {
                "type": "object",
                "properties": {
                	"id": {
			            "type": "integer",
			            "description": "number of mail queue entry"
			        },
                    "mime": {
                        "type": "string",
                        "description": "mime type used in 'Content-Type', should include charset if necessary"
                    },
                    "content": {
                        "type": "string",
                        "description": "content to transfer"
                    }
                }
            }
        },
        "process": {
            "$ref": "process.json"
        },
        "subject": {
            "type": "string",
            "description": "Subject part for the mail"
        },
        "client": {
        	"$ref": "client.json"
        }
    }
}
