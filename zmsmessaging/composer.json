{
    "name": "eappointment/zmsmessaging",
    "description": "messaging email and notifications",
    "license": "EUPL-1.2",
    "authors": [
        {
            "name": "Torsten Kunst",
            "email": "torsten.kunst@berlinonline.de"
        }
    ],
    "scripts": {
        "command": "bin/configure"
    },
    "config": {
        "platform": {
            "php": "8.0"
        },
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "require": {
        "phpmailer/phpmailer": "~6.9.0",
        "monolog/monolog": "~1.27.0",
        "eappointment/mellon": "*@dev",
        "eappointment/zmsclient": "*@dev",
        "eappointment/zmsentities": "*@dev",
        "eappointment/zmsslim": "*@dev",
        "giggsey/libphonenumber-for-php": "~8.13.0"
    },
    "autoload": {
        "psr-4": {
            "BO\\Zmsmessaging\\": "src/Zmsmessaging/",
            "BO\\Zmsmessaging\\Tests\\": "tests/Zmsmessaging/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "~9.6.0",
        "phpspec/prophecy-phpunit": "v2.0.2",
        "phpmd/phpmd": "~2.15.0",
        "squizlabs/php_codesniffer": "~3.7.0",
        "roave/security-advisories": "dev-latest"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../*",
            "options": {
                "symlink": true
            }
        }
    ]
}